<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.unitn.disi.lpsmt.idabere.MenuActivity"
    android:layout_weight="1">


    <ExpandableListView
        android:id="@+id/expandable_review_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    </ExpandableListView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_scrollFlags="scroll|enterAlways"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/review_total_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_list_item_price"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/review_total_order_price_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_list_item_currency"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"/>

            </LinearLayout>



            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/colorPrimaryLight"
                app:menu="@menu/review_order_bottom_navigation"
                android:translationZ="-10sp"/>

        </FrameLayout>



    </android.support.v7.widget.Toolbar>


</LinearLayout>



