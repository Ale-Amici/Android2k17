<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.unitn.disi.lpsmt.idabere.activities.MenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/loading_indicator"
            android:visibility="gone">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/gps_loading_menu_label"/>

        </LinearLayout>

        <ExpandableListView
            android:id="@+id/categories_expandable_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >


        </ExpandableListView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_scrollFlags="scroll|enterAlways"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="@dimen/activity_vertical_margin">

                                <TextView
                                    android:id="@+id/review_total_order_price_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/currency_right_margin"

                                    android:text="@string/menu_list_item_currency"
                                    android:textSize="@dimen/title_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/menu_total_order_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_list_item_price"
                                    android:textSize="@dimen/title_text_size"
                                    android:textStyle="bold" />

                        </LinearLayout>


                        <android.support.design.widget.BottomNavigationView
                            android:id="@+id/menu_bottom_navigation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryLight"
                            android:translationZ="-10sp"
                            app:menu="@menu/menu_list_bottom_navigation"
                            app:itemIconTint="@drawable/nav_item_color_state"
                            app:itemTextColor="@drawable/nav_item_color_state"/>

                </FrameLayout>



        </android.support.v7.widget.Toolbar>



</LinearLayout>


