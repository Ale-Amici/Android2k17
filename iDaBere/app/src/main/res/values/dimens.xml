<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="activity_vertical_margin_doubled">32dp</dimen>

    <dimen name="menu_item_horizontal_padding">16dp</dimen>
    <dimen name="menu_item_vertical_padding">8dp</dimen>

    <!-- Default text size -->
    <dimen name="title_text_size">20sp</dimen>
    <dimen name="paragraph_text_size">14sp</dimen>
    <dimen name="buttons_text_size">14sp</dimen>

    <!-- Default card size -->
    <dimen name="card_height_closed">100dp</dimen>
    <dimen name="card_height_open">300dp</dimen>

    <!-- Quantity choices padding -->
    <dimen name="quantity_number_horizontal_padding">8dp</dimen>

    <!-- Bottom navigation bar text size -->
    <dimen name="design_bottom_navigation_text_size" tools:override="true">
        @dimen/paragraph_text_size
    </dimen>
    <dimen name="design_bottom_navigation_active_text_size" tools:override="true">
        @dimen/paragraph_text_size
    </dimen>

    <dimen name="currency_right_margin">5dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="elevation">20dp</dimen>

</resources>
